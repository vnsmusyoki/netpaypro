@model CreateCompanyVM;
@{
    ViewData["Title"] = "Add New Company";
    var cities = ViewBag.Cities as List<City>;
    var countries = ViewBag.Countries as List<Country>;
}
<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Company</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateCompany" asp-controller="Company" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CompanyName" class="form-label"></label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter company name">
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RegistrationNumber" class="form-label"></label>
                                <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number">
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" type="tel" class="form-control" placeholder="+123456789">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" placeholder="Enter address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Logo" class="form-label"></label>
                                <input asp-for="Logo" class="form-control" placeholder="">
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CityId" class="form-label"></label>
                                <select asp-for="CityId" class="form-select">
                                    <option value="">Choose City...</option>
                                    @foreach (var city in cities)
                                    {
                                        <option value="@city.Id">@city.CityName</option>
                                    }
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CountryId" class="form-label"></label>
                                <select asp-for="CountryId" class="form-select">
                                    <option value="">Choose Country...</option>
                                    @foreach (var country in countries)
                                    {
                                        <option value="@country.Id">@country.CountryName</option>
                                    }
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Currency" class="form-label"></label>
                                <input asp-for="Currency" class="form-control" placeholder="Enter currency (e.g., USD)">
                                <span asp-validation-for="Currency" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PaymentMethod" class="form-label"></label>
                                <input asp-for="PaymentMethod" class="form-control" placeholder="Enter payment method">
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TaxRate" class="form-label"></label>
                                <input asp-for="TaxRate" type="number" class="form-control" placeholder="Enter tax rate" step="0.01">
                                <span asp-validation-for="TaxRate" class="text-danger"></span>
                            </div>
                        </div>
                         
                        <div class="col-lg-12">
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
<script>
    $(document).ready(function () {
    @if (TempData["Success"] != null)
    {
        <text>
                    toastr.success('@TempData["Success"]');
        </text>
    }

    @if (TempData["Error"] != null)
    {
        <text>
                    toastr.error('@TempData["Error"]');
        </text>
    }
        });
</script>
