@model CreateCompanyVM;
@{
    ViewData["Title"] = "Add New Company";
    var cities = ViewBag.Cities as List<City>;
    var countries = ViewBag.Countries as List<Country>;
    var businessTypes = new List<string> { "Sole Proprietorship", "Partnership", "Corporation", "Limited Liability Company (LLC)" };
    var industries = new List<string> { "Technology", "Finance", "Healthcare", "Retail", "Manufacturing", "Education", "Other" };

}
<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Company</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateCompany" asp-controller="Company" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CompanyName" class="form-label"></label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter company name">
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RegistrationNumber" class="form-label"></label>
                                <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number">
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BusinessType" class="form-label">Business Type</label>
                                <select asp-for="BusinessType" class="form-select">
                                    <option value="">Choose Business Type...</option>
                                    @foreach (var type in businessTypes)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="BusinessType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IndustryType" class="form-label">Industry Type</label>
                                <select asp-for="IndustryType" class="form-select">
                                    <option value="">Choose Industry...</option>
                                    @foreach (var industry in industries)
                                    {
                                        <option value="@industry">@industry</option>
                                    }
                                </select>
                                <span asp-validation-for="IndustryType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" type="tel" class="form-control" placeholder="+123456789">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" placeholder="Enter address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Logo" class="form-label"></label>
                                <input asp-for="Logo" class="form-control" placeholder="">
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CityId" class="form-label"></label>
                                <select asp-for="CityId" class="form-select">
                                    <option value="">Choose City...</option>
                                    @foreach (var city in cities)
                                    {
                                        <option value="@city.Id">@city.CityName</option>
                                    }
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CountryId" class="form-label"></label>
                                <select asp-for="CountryId" class="form-select">
                                    <option value="">Choose Country...</option>
                                    @foreach (var country in countries)
                                    {
                                        <option value="@country.Id">@country.CountryName</option>
                                    }
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Currency" class="form-label"></label>
                                <input asp-for="Currency" class="form-control" placeholder="Enter currency (e.g., USD)">
                                <span asp-validation-for="Currency" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="WorkingHours" class="form-label">Working Hours</label>
                                <input asp-for="WorkingHours" class="form-control" placeholder="e.g., Mon-Fri 9AM-5PM">
                                <span asp-validation-for="WorkingHours" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Website" class="form-label">Company Website</label>
                                <input asp-for="Website" type="url" class="form-control" placeholder="https://example.com">
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Company Description</label>
                                <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                         
                        <div class="col-lg-12">
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
  
    <script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>
          
           
        <script>
            ClassicEditor
            .create(document.querySelector('#Description'))
                    .catch(error => {
                console.error(error);
                    });
    </script>
    <partial name="_ValidationScriptsPartial" />
    }
 
