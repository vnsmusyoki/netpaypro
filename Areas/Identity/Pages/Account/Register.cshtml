@page
@model RegisterModel
 
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}
 

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center mt-sm-5 mb-4 text-white-50">
                <div>
                    <a asp-action="Index" asp-controller="Home" class="d-inline-block auth-logo">
                        <img src="~/logo.png" alt="" height="20">
                    </a>
                </div>
                <p class="mt-3 fs-15 fw-medium">Your ultimate Payroll partner</p>
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4 card-bg-fill">

                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">Hey there  </h5> 
                    </div>
                    <div class="p-2 mt-4">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="mb-3">
                                <label for="username" asp-for="Input.FullName" class="form-label"></label>
                                <input asp-for="Input.FullName" class="form-control" id="username" placeholder="Enter full name">
                                <span class="text-danger" asp-validation-for="Input.FullName"></span>
                            </div>  
                            <div class="mb-3">
                                <label for="username" asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" id="username" placeholder="Enter full name">
                                <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
                            </div> 
                            <div class="mb-3">
                                <label for="username" asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" id="username" placeholder="Enter email address">
                                <span class="text-danger" asp-validation-for="Input.Email"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for=Input.Password for="password-input">Password</label>
                                <div class="position-relative auth-pass-inputgroup mb-3">
                                    <input   asp-for=Input.Password class="form-control pe-5 password-input" placeholder="Enter password" id="password-input">
                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon material-shadow-none" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                </div>
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for=Input.ConfirmPassword for="password-input"></label>
                                <div class="position-relative auth-pass-inputgroup mb-3">
                                    <input  asp-for=Input.ConfirmPassword class="form-control pe-5 password-input" placeholder="Enter password" id="password-input">
                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon material-shadow-none" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                </div>
                                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                            </div>

                             

                            <div class="mt-4">
                                <button class="btn btn-success w-100" type="submit">Sign Up</button>
                            </div>

                           
                        </form>
                    </div>
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->

            <div class="mt-4 text-center">
                <p class="mb-0">Already have an account ? <a asp-page="./Login" class="fw-semibold text-primary text-decoration-underline"> SignIn</a> </p>
            </div>

        </div>
    </div>
    <!-- end row -->
</div>
  

