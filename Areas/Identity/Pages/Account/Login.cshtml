@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Log in";
}
 

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center mt-sm-5 mb-4 text-white-50">
                <div>
                    <a asp-action="Index" asp-controller="Home" class="d-inline-block auth-logo">
                        <img src="~/logo.png" alt="" height="20">
                    </a>
                </div>
                <p class="mt-3 fs-15 fw-medium">Your ultimate Payroll partner</p>
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4 card-bg-fill">

                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">Welcome Back !</h5>
                        <p class="text-muted">Sign in to continue to Netpaypro.</p>
                    </div>
                    <div class="p-2 mt-4">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="mb-3">
                                <label for="username" asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" id="username" placeholder="Enter email address">
                                <span class="text-danger" asp-validation-for="Input.Email"></span>
                            </div>

                            <div class="mb-3">
                                <div class="float-end">
                                    <a asp-page="./ForgotPassword" class="text-muted">Forgot password?</a>
                                </div>
                                <label class="form-label" asp-for=Input.Password for="password-input">Password</label>
                                <div class="position-relative auth-pass-inputgroup mb-3">
                                    <input type="password" asp-for=Input.Password class="form-control pe-5 password-input" placeholder="Enter password" id="password-input">
                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon material-shadow-none" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                </div>
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" asp-for="Input.RememberMe">
                                <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>

                            <div class="mt-4">
                                <button class="btn btn-success w-100" type="submit">Sign In</button>
                            </div>

                           
                        </form>
                    </div>
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->

            <div class="mt-4 text-center">
                <p class="mb-0">Don't have an account ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-primary text-decoration-underline"> Signup </a> </p>
            </div>

        </div>
    </div>
    <!-- end row -->
</div>
 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
